{
  "name": "Weather API client / proxy",
  "description": "Client API to access weather data",
  "keywords": [
    "PHP",
    "Guzzle"
  ],
  "homepage": "http://github.com/pcasani/",
  "license": "MIT",
  "authors": [
    {
      "name": "Paolo Casani",
      "email": "paolo.casani@yahoo.co.uk"
    }
  ],
  "require": {
    "guzzlehttp/guzzle": "6.5",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5"
  },
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    },
    "classmap": [
      "src/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "coverage": "phpunit --coverage-html=coverage --coverage-text",
    "phpstan": "./vendor/bin/phpstan analyse src tests --level=6",
    "start": "php -S localhost:8001 -t public public/index.php",
    "test": "phpunit"
  }
}
